<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:actionBarStyle">@style/MActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MActionBar"
           parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <item name="android:background">@color/background_actionbar</item>

        <!-- Support library compatibility -->
        <item name="background">@color/background_actionbar</item>
    </style>




    <style name="fixedTextViewStyle" parent="android:Widget.TextView">
        <!-- Override the textColor attribute explicitly to avoid unexpected text color issue on HTC devices -->
        <item name="android:textColor">@color/abc_primary_text_material_light</item>
        <item name="android:textViewStyle">@style/fixedTextViewStyle</item>
    </style>

    <style name="recyclerViewStyle">
        <!-- NOTE: clipChildren should be true on API level 10 -->
        <item name="android:background">@color/background_app</item>
        <item name="android:clipChildren">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="launcherButtonStyle">
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="commonListItemStyle">
    </style>

    <style name="sectionHeaderItemStyle">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:gravity">left|bottom</item>
        <item name="android:paddingBottom">8dp</item>
    </style>


</resources>
